<h1>Show Live box item</h1>

<%= if @live_action in [:edit] do %>
  <.modal return_to={Routes.live_box_item_show_path(@socket, :show, @live_box_item)}>
    <.live_component
      module={ToolBoxWeb.LiveBoxItemLive.FormComponent}
      id={@live_box_item.id}
      title={@page_title}
      action={@live_action}
      live_box_item={@live_box_item}
      return_to={Routes.live_box_item_show_path(@socket, :show, @live_box_item)}
    />
  </.modal>
<% end %>

