<ul>

  <li>
    <strong>Short description:</strong>
    <%= @live_box_item.short_description %>
  </li>

  <li>
    <strong>Url:</strong>
    <%= @live_box_item.url %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.live_box_item_show_path(@socket, :edit, @live_box_item), class: "button" %></span> |
<span><%= live_redirect "Back", to: Routes.live_box_item_index_path(@socket, :index) %></span>
